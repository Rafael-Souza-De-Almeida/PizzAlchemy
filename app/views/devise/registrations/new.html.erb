<div class = "flex flex-col items-center mx-auto border-2  p-32 rounded-md shadow-lg ">

  <h2 class = "font-bold text-5xl text-yellow-300">Cadastrar-se</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="flex flex-col space-y-6 items-center mt-12">

    <div class="text-red-400">
     <%= render "layouts/error_messages" %>
    </div>

      <div class="field">
        <%= f.label :nome %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :Senha %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :Confirmar_Senha %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions w-72">
        <%= button_to user_session_path, method: :post do%>
          <%= render(partial: "layouts/button", locals: { button_text: "Cadastrar" }) %>
        <% end %>
      </div>

      <p>
        Já possui uma conta?
        <span>
          <%= link_to "Entrar", new_user_session_path, class: "hover:underline"%>
        </span> 
      </p>
      <% end %>
    </div>

</div>

